{
    "env": {
        "commonjs": true,
        "es2020": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        ///////////// general //////////////
        "indent": [
            "warn",
            "tab"
        ],
        // "linebreak-style": [
        //     "warn",
        //     "unix"
        // ],
        "semi": [
            "warn",
            "always"
        ],
        "block-spacing": "warn",
        "space-before-blocks": "warn",
        "space-in-parens": "warn",
        "no-multi-spaces": "warn",
        "no-trailing-spaces": "warn",
        "no-unused-vars": "warn",
        ///////////// strings //////////////
        "quotes": [
            "warn",
            "single"
        ],
        ///////////// delimiters ///////////
        "semi-spacing": "warn",
        "semi-style": "warn",
        "comma-dangle": "warn",
        "comma-spacing": "warn",
        "comma-style": "warn",
        ///////////// operators ////////////
        "space-infix-ops": "warn",
        "space-unary-ops": "warn",
        "operator-linebreak": [
            "warn",
            "after",
            {
                "overrides": {
                    "=": "none"
                }
            }
        ],
        ///////////// comments /////////////
        "spaced-comment": "warn",
        ///////////// functions ////////////
        "func-call-spacing": [
            "warn",
            "never"
        ],
        "space-before-function-paren": [
            "warn",
            "never"
        ],
        ///////////// arrays ///////////////
        "array-bracket-spacing": "warn",
        "array-bracket-newline": [
            "warn",
            {
                "multiline": true
            }
        ],
        "array-element-newline": [
            "warn",
            {
                "multiline": true
            }
        ],
        ///////////// objects //////////////
        "key-spacing": "warn",
        "object-curly-spacing": "warn",
        "object-curly-newline": [
            "warn",
            {
                "multiline": true
            }
        ],
        "object-property-newline": [
            "warn",
            {
                "allowAllPropertiesOnSameLine": false
            }
        ]
    }
}