<!-- Image and text -->
<header>
  <nav class="navbar navbar-light fixed-top bg-light">
    <span id="menu-bar">
      <i onclick="openNav()" class="fas fa-bars fa-lg"></i>
      
    </span>

    <a class="navbar-brand" href="/">
      <img
        src="/images/logo.png"
        height="30"
        class="d-inline-block align-top"
        alt="logo"
      />
    </a>
    
		<div class="input-group" id="search_group">
      <input class="form-control" id="search_input" name="search" placeholder="Search" />
      
			<div class="input-group-append">
				<button class="btn py-0 px-2 my-sm-0" id="search_btn" type="submit">
					<span class="fa fa-search"></span>
				</button>
			</div>
		</div>

    <% if(auth) { %>
      <form action="/logout" method="POST">
        <button type="submit" class="btnAuth">Logout</button>
      </form>
    <% } else { %>
      <form action="/login" method="GET">
        <button type="submit" class="btnAuth">Login</button>
      </form>
    <% } %>
  </nav>
</header>
<script>
      /* Set the width of the side navigation to 250px */
      function openNav() {
        document.getElementById("mySidenav").style.width = "250px";
      }
</script>
