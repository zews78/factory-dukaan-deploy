<!-- Image and text -->
<header>
  <nav class="navbar navbar-light fixed-top bg-light">
    <a class="navbar-brand" href="/">
      <img
        src="/images/logo.png"
        height="30"
        class="d-inline-block align-top"
        alt="logo"
      />
    </a>
    
		<div class="input-group" id="search_group">
			<input class="form-control" id="search_input" name="search" type="search" placeholder="Search"
				aria-label="Search" />
			<div class="input-group-append">
				<button class="btn py-0 px-2 my-sm-0" id="search_btn" type="submit">
					<span class="fa fa-search"></span>
				</button>
			</div>
		</div>
    <%let auth = true;%>
    <% if(auth) { %>
      <form action="/logout" method="POST">
        <button type="submit" class="btnAuth">Logout</button>
      </form>
    <% } else { %>
      <form action="/login" method="GET">
        <button type="submit" class="btnAuth">Login</button>
      </form>
    <% } %>
  </nav>
</header>
