<%- include("../partials/start") %>
<%- include("../partials/headBody") %>
<%- include("../partials/header") %>
<div class="wrapper">
    <%- include("../partials/sidenav") %>
    <div class="main_content">
        <div class="header">
            <h2 class="text-center">Requirement by <a href="/user/seller-profile/<%= reqData.uid %>"><%= reqName%></a></h2>
        </div>
        
        <div class="container">
                <div class="row">
                    <aside class="col-sm-4 border-right">
                        <article class="gallery-wrap"> 
                            <div class="img-big-wrap">
                                <div>
                                    <a href="#"><img src="/images/product1.jpg"></a>
                                </div>
                            </div>
                            <div class="img-small-wrap">
                                <div class="item-gallery"><img src="/images/slide1.jpg"></div>
                                <div class="item-gallery"><img src="/images/slide2.jpg"></div>
                                <div class="item-gallery"><img src="/images/slide3.jpg"></div>
                            </div>
                        </article>
                    </aside>

                    <aside class="col-sm-7">
                        <article class="card-body p-3">
                            <h3 class="title mb-3"><%= reqData.product_name %></h3>
                            <p class="price-detail-wrap"> 
                                <span class="price h3 text-warning"> 
                                    <span class="currency">â‚¹</span><span class="price"> <%= reqData.price %></span>
                                </span> 
                            </p>
                            <dl class="item-property">
                                <dt>Description</dt>
                                <dd><p><%= reqData.desc %> </p></dd>
                            </dl>
                            <dl class="param param-feature">
                                <dt>Material Used</dt>
                                <dd><%= reqData.material_used%></dd>
                            </dl>
                            <dl class="param param-feature">
                                <dt>Quantity</dt>
                                <dd><%= reqData.quantity %></dd>
                            </dl>
                            <dl class="param param-feature">
                                <dt>Requirement created On</dt>
                                <dd style="color: #adb5bd;"><%= reqData.createdOn.toDate().toJSON().slice(0,10).replace(/-/g,'/') %></dd>
                            </dl>
                            
                            <hr>
                                <dl class="param param-feature">
                                    <dt>Specifications</dt>
                                    <% var i =0; %>
                                    <% while(Object.keys(reqData.specifications)[i]){ %>
                                        <span style="color: #495057;"><%= Object.keys(reqData.specifications)[i] %></span> : <span><%= Object.values(reqData.specifications)[i]%></span> <br>
                                    <% i++ %>
                                    <% } %>

                                </dl>
                            <hr>
                            
                            <button onclick="makeYourBid()" class="btn btn-md btn-primary btn-responsive text-uppercase">Make a Bid</button>
                            <a href="/requirement" class="btn btn-md btn-outline-primary btn-responsive text-uppercase">Go Back</a>
                        </article>
                    </aside>
                </div>
        </div>

        <hr>
        <div class="container text-center" id="bidSection">
            <form method="post">
                <input type="number" name="bid" id="userBidInput" placeholder="Make your bid" class="p-1">
                <button type="button" class="btn btn-sm btn-primary" onclick="submitYourBid()">
                    Submit Bid
                </button>
            </form>
        </div>

        <div class="container bids-section">
            <h3 class="text-center">All Bids</h3>
            <div class="chat-body no-padding profile-message">
                <ul>
                    <% if (bidsDetails.length>0) {%>
                        <% for(var i=0; i < bidsDetails.length; i++) { %>
                            <li class="message">
                                <img src="https://bootdey.com/img/Content/avatar/avatar1.png" class="online" />
                                <span class="message-text">
                                    <small class="text-muted pull-right ultra-light"> <%= bidsDetails[i].postedOn.toDate().toJSON().slice(0,10).replace(/-/g,'/') %> </small>
                                    <a href="javascript:void(0);" class="username">
                                        <%= bidsDetails[i].bidderInfo.name %>
                                    </a>
                                    <p>Bid Value: <%= bidsDetails[i].amount %></p>
                                </span>   
                            </li>
                            <hr>
                         <% } %>
                        
                        <%}else{%>
                        <p>No Bids Yet</p>
                        <% } %>
                </ul>
            </div>
        </div>

    </div>
</div> 

<%- include('../partials/footer.ejs') %> 

<script>
    const makeYourBid = () => {
        document.getElementById("userBidInput").focus(); 
    }

    const submitYourBid=async ()=>{
        const response=await axios({
            url:`${window.location.href}/bid`,
            method:"POST",
            data:{
                bidAmount: +document.getElementById("userBidInput").value
            }
        })
        if(response.data.status==='success'){
            console.log("reload");
            location.reload();
        }else{
            console.log(response.data.status);
        }
    }
    
</script>

<%- include('../partials/end.ejs') %>