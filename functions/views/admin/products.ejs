<%- include('../partials/admin/start.ejs') %> <%-
include('../partials/headBody.ejs') %> <%-
include('../partials/admin/header.ejs') %>

<div class="container-fluid">
	<h1 class="page-heading">Products</h1>
	<form action="/admin/products">
		<div class="input-group" id="search_group">
			<input class="form-control" id="search_input" name="search" type="search" placeholder="Search"
				aria-label="Search" />
			<% for (let query in queryParams) { %>
			<% if(query !== 'search') { %>
			<input name="<%= query %>" value="<%= queryParams[query] %>" hidden />
			<% } %>
			<% } %>
			<div class="input-group-append">
				<button class="btn py-0 px-2 my-sm-0" id="search_btn" type="submit">
					<span class="fa fa-search"></span>
				</button>
			</div>
		</div>
	</form>
	<div class="dropdown mx-3" id="sort_dropdown">
		<button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
			aria-haspopup="true" aria-expanded="false">
			Sort By
		</button>
		<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
			<a class="dropdown-item"
				href="?<%= queryParams.search && 'search=' + queryParams.search + '&' %>sortBy=createdOn&order=asc">Newest</a>
			<a class="dropdown-item"
				href="?<%= queryParams.search && 'search=' + queryParams.search + '&' %>sortBy=createdOn&order=desc">Oldest</a>
			<a class="dropdown-item"
				href="?<%= queryParams.search && 'search=' + queryParams.search + '&' %>sortBy=price&order=asc">Price - (Low to
				High)</a>
			<a class="dropdown-item"
				href="?<%= queryParams.search && 'search=' + queryParams.search + '&' %>sortBy=price&order=desc">Price - (High
				to
				Low)</a>
		</div>
	</div>
	<div class="clearfix my-3"></div>
	<div class="horizontal-scroll-wrapper">
		<div class="horizontal-scroll-container">
			<div class="list-group">
				<a href="#" class="list-group-item list-group-item-action bg-dark text-light">
					<div class="row">
						<div class="col-1">Status</div>
						<div class="col-1">Creation Date</div>
						<div class="col-2">Product Name</div>
						<div class="col-2">Seller's Name</div>
						<div class="col-2">Product Price</div>
						<div class="col-3">Tags</div>
						<div class="col-1 text-right">Edit</div>
					</div>
				</a>
				<% for (let product of products) { %>
				<a href="#" class="list-group-item list-group-item-action">
					<div class="row">
						<div class="col-1"><%= product.verified %></div>
						<div class="col-1"><%= product.createdOn %></div>
						<div class="col-2"><%= product.title %></div>
						<div class="col-2"><%= product.sellerName %></div>
						<div class="col-2"><%= product.price %></div>
						<div class="col-3"><%= product.tags %></div>
						<div class="col-1 text-right">
							<span class="fa fa-pencil-square-o"></span>
						</div>
					</div>
				</a>
				<% } %>
			</div>
		</div>
	</div>
	<nav class="my-4">
		<ul class="pagination justify-content-center">
			<li class="page-item {{#unless links.prev}}disabled{{/unless}}">
				<a class="page-link" href="{{ links.prev }}">
					<span class="fa fa-arrow-left"></span>
				</a>
			</li>
			<li class="page-item {{#unless links.next}}disabled{{/unless}}">
				<a class="page-link" href="{{ links.next }}">
					<span class="fa fa-arrow-right"></span>
				</a>
			</li>
		</ul>
	</nav>
</div>

<%- include('../partials/end.ejs') %>